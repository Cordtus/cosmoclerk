// .eslintrc.json
{
    "env": {
      "node": true, // Defines things like `process` and `__dirname` globally
      "es6": true
    },
    "extends": "eslint:recommended",
    "rules": {
      "no-unused-vars": ["warn", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
      "no-undef": "error"
    }
  }
  